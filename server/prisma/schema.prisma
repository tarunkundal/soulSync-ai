generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id             String  @id @default(uuid()) @db.Uuid
  email          String? @unique
  whatsappNumber String? @unique @map("whatsapp_number")
  fullName       String? @map("full_name")

  onboardingStep   OnboardingStep   @default(NEW)
  conversationFlow ConversationFlow @default(NONE)
  conversationStep ConversationStep @default(NONE)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  people          People[]
  userPreferences User_Preferences[]
  whatsappConfigs Whatsapp_Config[]
  messages        Messages[]

  @@map("users")
}

enum ConversationStep {
  NONE
  ASK_PERSON_NAME
  ASK_PERSON_PHONE
  ASK_PERSON_RELATION
  ASK_PERSON_DATE
  CONFIRM_PERSON
}

enum ConversationFlow {
  NONE
  ADD_PERSON
}

enum OnboardingStep {
  NEW
  ASK_NAME
  READY
}

model People {
  id               String            @id @default(uuid()) @db.Uuid
  name             String
  relationshipType String            @map("relationship_type")
  phoneNumber      String?           @map("phone_number")
  aiTonePreference String            @map("ai_tone_preference")
  createdAt        DateTime          @default(now()) @map("created_at")
  whatsappEnabled  Boolean           @default(false) @map("whatsapp_enabled")
  userId           String            @map("user_id") @db.Uuid
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  importantDates   Important_Dates[]
  messages         Messages[]

  @@unique([userId, phoneNumber])
}

model Important_Dates {
  id        String   @id @default(uuid()) @db.Uuid
  dateValue DateTime @map("date_value") @db.Date
  dateType  String
  createdAt DateTime @default(now()) @map("created_at")

  personId String @map("person_id") @db.Uuid
  people   People @relation(fields: [personId], references: [id], onDelete: Cascade)

  @@unique([personId, dateType])
}

model User_Preferences {
  id                 String   @id @default(uuid()) @db.Uuid
  timeZone           String   @map("time_zone")
  language           String
  emailNotifications Boolean  @default(false) @map("email_notifications")
  createdAt          DateTime @default(now()) @map("created_at")

  userId String @map("user_id") @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Whatsapp_Config {
  id          String   @id @default(uuid()) @db.Uuid
  phoneNumber String   @map("phone_number")
  isConnected Boolean  @default(false) @map("is_connected")
  accessToken String   @map("access_token")
  connectedAt DateTime @default(now()) @map("connected_at")

  userId String @map("user_id") @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Messages {
  id            String   @id @default(uuid()) @db.Uuid
  content       String
  style         String
  status        String
  sentAt        DateTime @default(now()) @map("sent_at")
  createdAt     DateTime @default(now()) @map("created_at")
  messageLength Int      @map("message_length")

  personId String @map("person_id") @db.Uuid
  people   People @relation(fields: [personId], references: [id], onDelete: Cascade)
  userId   String @map("user_id") @db.Uuid
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

